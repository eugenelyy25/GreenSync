{
  "manifest_version": 3,
  "name": "GreenSync: AI Eco-Agent",
  "version": "1.0",
  "description": "Multi-role AI Agent for sustainable workspace management.",
  "permissions": [
    "identity",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.google.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://firestore.googleapis.com/*"
