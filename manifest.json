{
  "manifest_version": 3,
  "name": "GreenSync: AI Eco-Agent",
  "version": "1.0",
  "description": "Multi-role AI Agent for sustainable workspace management.",
  "permissions": [
    "identity",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.google.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "oauth2": {
    "client_id": "517644593564-usngaafg34hr9iuq6v18thejpkt6gqe0.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/drive.readonly"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://drive.google.com/*"],
      "js": ["content.js"]
    }
  ]
}